# LLM API Keys (One is required)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# Appwrite Configuration (Backend)
# Get these from your Appwrite Console
APPWRITE_API_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_appwrite_project_id
APPWRITE_API_KEY=your_appwrite_api_key
APPWRITE_DB_ID=job_market_db
APPWRITE_BUCKET_ID=application_files

# Job Search Defaults
CV_FILE_PATH=cvs/CV.pdf
SEARCH_QUERY=Python Developer
LOCATION="South Africa"
MAX_JOBS=10

# Server Configuration
SECRET_KEY=generate_a_strong_random_string_here
CORS_ORIGINS=http://localhost:5173,http://localhost:8000
PORT=8000

# Scraping & Caching Settings
SCRAPER_CACHE_DIR=job_cache
CACHE_MAX_AGE_HOURS=24
CACHE_MAX_SIZE_MB=100
DEFAULT_RESULTS_WANTED=20
MAX_WORKERS=5
API_MAX_RETRIES=3
API_RETRY_DELAY=2.0
API_TIMEOUT=30
