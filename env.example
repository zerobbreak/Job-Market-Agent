# ===========================================
# Job Market AI Analyzer Configuration
# Copy this file to .env and fill in your values
# ===========================================

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# OpenRouter API Key (required for all AI features)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Path to your CV PDF file
CV_FILE_PATH=path/to/your/cv.pdf

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Career goals (extracted from CV if not provided)
CAREER_GOALS_DEFAULT="I want to become a software engineer in fintech"

# Default location for job searches
DEFAULT_LOCATION="South Africa"

# Default industry focus
DEFAULT_INDUSTRY="Technology"

# Default experience level
DEFAULT_EXPERIENCE_LEVEL="Entry Level"

# Default desired role
DEFAULT_DESIRED_ROLE="Software Engineer"

# ===========================================
# OPENROUTER MODEL CONFIGURATION
# ===========================================

# Default model key (optional). See main.py for supported keys.
# Available models: deepseek-chat, deepseek-coder, deepseek-r1,
# microsoft-wizardlm, microsoft-wizardlm-7b, meta-llama-3.1-8b,
# meta-llama-3.2-3b, mistral-7b, gemini-flash, minimax-m2, kimi-k2
OPENROUTER_MODEL_KEY=deepseek-chat

# ===========================================
# SERVER / CORS CONFIGURATION
# ===========================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Cache TTL in seconds (default 30 minutes for agent responses)
CACHE_AGENT_TTL=1800

# Job scraping cache TTL (default 24 hours)
CACHE_JOB_TTL=86400

# Profile analysis cache TTL (default 1 hour)
CACHE_PROFILE_TTL=3600

# Cache maximum sizes
CACHE_MAX_SIZE_AGENT=500
CACHE_MAX_SIZE_JOB=200
CACHE_MAX_SIZE_PROFILE=100

# ===========================================
# API CONFIGURATION
# ===========================================

# Maximum API retry attempts
API_MAX_RETRIES=3

# Delay between retries (exponential backoff base)
API_RETRY_DELAY=2.0

# API timeout in seconds
API_TIMEOUT=30

# ===========================================
# SCRAPING CONFIGURATION
# ===========================================

# Maximum jobs to scrape per site
MAX_JOBS_PER_SITE=50

# Maximum search terms to use
MAX_SEARCH_TERMS=5

# Scraping timeout in seconds
SCRAPING_TIMEOUT=60

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug mode (more verbose logging)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# EXAMPLES
# ===========================================

# For South African users:
# DEFAULT_LOCATION="Johannesburg"
# CAREER_GOALS_DEFAULT="I want to become a data scientist in Cape Town"

# For international users:
# DEFAULT_LOCATION="San Francisco, CA"
# CAREER_GOALS_DEFAULT="I want to become a machine learning engineer"

# For high cache performance:
# CACHE_MAX_SIZE_AGENT=1000
# CACHE_AGENT_TTL=3600

# For development:
# DEBUG=true
# LOG_LEVEL=DEBUG
# API_MAX_RETRIES=1