# =============================================================================
# Job Market AI Analyzer - Development Dockerfile (Slim & Fast)
# =============================================================================
# Lightweight version for development - excludes heavy ML libraries
# Build time: ~3-5 minutes (vs 15-25 minutes for full version)

FROM python:3.11-slim as development

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV DEV_MODE=true

# Install minimal system dependencies (faster than full version)
RUN apt-get update && apt-get install -y \
    build-essential \
    libpoppler-cpp-dev \
    pkg-config \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements-dev.txt .

# Install Python dependencies (much faster with slim requirements)
RUN pip install --no-cache-dir -r requirements-dev.txt

# Copy application code
COPY . .

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app
USER app

# Expose port for development
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import main; print('Health check passed')" || exit 1

# Default command
CMD ["python", "main.py", "--help"]
